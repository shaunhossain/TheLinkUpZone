<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shaunhossain.thelinkupzone.ChooseLoginRegistrationActivity"
    android:orientation="vertical"
    android:background="@color/colorStart">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="130dp"
        android:text="Welcome to The Link Up \n Zone"
        android:textAlignment="center"
        android:textColor="@color/white1"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="login"
        android:backgroundTint="@color/colorAccent1"
        android:textColor="@color/white1" />

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="register"
        android:textColor="@color/colorPrimary"
        android:backgroundTint="@color/white1"/>

</LinearLayout>
